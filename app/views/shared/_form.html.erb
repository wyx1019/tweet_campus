    <%= form_with(model: @user, local: true) do |f| %>
      <%= f.label :name, "名前" %>
      <%= f.text_field :name %>
      <%= f.label :email %>
      <%= f.email_field :email %>
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>
      <% if @current_user %>
      <%= f.label :image, "画像をアップロード" %>
      <%= f.file_field :image %>
      <% else %>
      <%= f.label :password_confirmation, "パスワード確認" %>
      <%= f.password_field :password_confirmation %>
      <% end %>
      <%= f.submit yield(:button_text), class: "btn btn-medium" %>
    <% end %>

