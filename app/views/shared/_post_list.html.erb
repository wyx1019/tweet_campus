  <div class="posts">
    <div class = "card">
        <div class="post">
            <div class="post-box">
                    <%= link_to(user_path(micropost.user), class: "user-image") do %>
                      <img src="" alt="">
                    <% end %>
                    <%= link_to(micropost_path(micropost), class: "post-content") do %>
                      <div class="user-bar">
                        <div class="user-info">
                          <span class ="user-name"><%= micropost.user.name %></span>
                          <span class ="user-major"><%= micropost.user.year %><%= micropost.user.major %></span>
                        </div>
                        <span class ="time"><%= time_ago_in_words(micropost.created_at) %> ago</span>
                      </div>
                      <p><%= micropost.content %></p>
                    <% end %>
            </div>
            <div class="action-bar">
                <div class="comment-btn">
                  <span class="fa fa-commenting comment-btn" aria-hidden="true">   2</span>
                </div>

                <div id="like_btn_<%= micropost.id %>" class="like-btn">
                    <% if @current_user.like?(micropost)  %>
                      <%= render 'shared/unlike_btn', micropost: micropost %>
                    <% else %>
                      <%= render 'shared/like_btn', micropost: micropost %>
                    <% end %>
                </div>
            </div>   
        </div>
    </div>
  </div>