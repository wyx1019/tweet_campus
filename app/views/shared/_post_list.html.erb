  <div class="posts">
    <div class = "card">
        <div class="post">
            <div class="post-box">
                    <%= link_to(user_path(micropost.user), class: "user-image") do %>
                      <img src="" alt="">
                    <% end %>
                    <%= link_to(micropost_path(micropost), class: "post-content") do %>
                      <div class="user-bar">
                        <div class="user-info">
                          <span class ="user-name"><%= micropost.user.name %></span>
                          <span class ="user-major"><%= micropost.user.year %><%= micropost.user.major %></span>
                        </div>
                        <span class ="time"><%= time_ago_in_words(micropost.created_at) %> ago</span>
                      </div>
                      <p><%= micropost.content %></p>
                    <% end %>
            </div>
            <div class="action-bar">
                <% if micropost.like?(@current_user)  %>
                  <%= link_to("/likes/#{micropost.id}/destroy", micropost_id: micropost.id, method: :delete, local: true ) do %>
                    <span class="fa fa-heart like-btn">  <%= micropost.liked_users.count%></span>
                  <% end %>
                <% else %>
                  <%= link_to(likes_path, micropost_id: micropost.id, method: :post, local: true ) do %>
                    <span class="fa fa-heart like-btn-unlike">   <%= micropost.liked_users.count%></span>
                  <% end %>
                <% end %>
            </div>   
        </div>
    </div>
  </div>