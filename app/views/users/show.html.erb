<% provide(:title, 'Profile') %>
<h1>Profile</h1>

    <h2><%= @user.name %></h2>
    <span><%= @user.email %></span>
    <span><%= @user.year %></span>
    <span><%= @user.major %></span>
    <div class="profile-actions-wrap">
        <div class="profile-actions follow-status">
            <a href="">フォロー中</a>
            <a href="">フォロワー</a>
        </div>
        <div class="profile-actions follow-actions">
        <% if @current_user.id != @user.id %>
                <a href="" class="btn btn-primary btn-sm">フォローする</a>
                <a href="" class="btn btn-primary btn-sm">メッセージ</a>
        </div>
        <div class="profile-actions account-actions">
        <% else %>
            <%= link_to("編集", edit_user_path(@current_user)) %>
            <%= link_to("ログアウト", logout_path, method: :post, data: { confirm: "ログアウトしますか？" })%>
        <% end %>
            <% if @current_user.admin %>
            <%= link_to("アカウント削除", user_path, method: :delete, data: { confirm: "アカウントを削除すると、このアカウントの投稿も共に消えますよ！" } )%>
            <% end %>
        </div>
    </div>
<section>
    <h3>投稿一覧</h3>
    　<div class="posts">
        <div class = "card">
            <div class="post">
                <% @microposts.each do |micropost| %>
                    <div class="post-box">
                        <%= link_to(user_path(micropost.user), class: "user-image") do %>
                        <img src="" alt="">
                        <% end %>
                        <%= link_to(micropost_path(micropost), class: "post-content") do %>
                            <div class="user-bar">
                                <div class="user-info">
                                    <span class ="user-name"><%= micropost.user.name %></span>
                                    <span class ="user-major"><%= micropost.user.year %><%= micropost.user.major %></span>
                                </div>
                                <span class ="time"><%= time_ago_in_words(micropost.created_at) %></span>
                            </div>
                            <p><%= micropost.content %></p>
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
<section>
    <h3>いいね!</h3>
