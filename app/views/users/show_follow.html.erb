<% provide(:title, @title) %>

    <h2><%= @user.name %><%= @heading %></h2>
    <div class="user-list">
        <% if @users.any? %>
            <% @users.each do |user| %>
                <%= link_to(user_path(user), class: "card") do %>
                    <div class="user-image"><img src="" alt=""></div>
                    <div class="user-info">
                        <span class ="user-name"><%= user.name %></span>
                        <span class ="user-major"><%= user.year %><%= user.major %></span>
                    </div>
                <% end %>
            <% end %>
        <% else %>
            <p><%= @user.name %><%= @heading %>はいません</p>
        <% end %>
    </div>
