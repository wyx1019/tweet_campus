<% provide(:title, '投稿一覧') %>
<h2>投稿一覧</h2>
  <div class="posts">
    <div class = "card">
        <div class="post">
          <% @microposts.each do |micropost| %>
            <div class="post-box">
              <div class="post-content">
                <%= link_to micropost.content,  "/microposts/#{micropost.id}" %>
              </div>
            </div>
          <% end %>
        </div>
    </div>
  </div>