<% provide(:title, 'ログイン') %>
<h1>ログイン</h1>
<div class="form">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email %>
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>
      <%= f.submit "ログイン", class: "btn btn-medium" %>
    <% end %>
    <div><%= link_to "新規登録はこちら >", signup_path %></div>
</div>
