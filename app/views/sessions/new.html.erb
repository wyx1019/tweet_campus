<% provide(:title, 'ログイン') %>
<div class="wrap">
  <h3>ログイン</h3>
  <div class="form">
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email %>
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password %>
        <%= f.submit "ログイン", class: "btn btn-medium" %>
      <% end %>
      <div class="underline" style="margin-top: 10px"><%= link_to "新規登録はこちら", signup_path %></div>
      <div class="underline"><%= link_to "パスワード忘れ", "#" %></div>
  </div>

</div> 